<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="intutility"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">  
    
  <requiredProperties>
    <requiredProperty key="devName" >
      <defaultValue></defaultValue>
    </requiredProperty>
    <requiredProperty key="devEmail" >
      <defaultValue></defaultValue>
    </requiredProperty>
    <requiredProperty key="groupId" >
      <defaultValue>com.devry.dbobjects.bpeldb.intutility</defaultValue>
    </requiredProperty>
  </requiredProperties>
  <fileSets>
    <fileSet encoding="UTF-8" filtered="true">
      <directory>src/main/resources/dbchangelog</directory>
      <includes>
        <include>*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/resources/dbscripts/data</directory>
      <includes>
        <include>*.sql</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
